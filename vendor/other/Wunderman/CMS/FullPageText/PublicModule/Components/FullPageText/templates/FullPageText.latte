{*
 * @var $article
 *}
{block content}
<div n:class="container, full-page-text, (isset($params['margin_top']) && ($params['margin_top'] == '' or $params['margin_top'] == 0)) ? no-margin-top, (isset($params['margin_bottom']) && ($params['margin_bottom'] == '' or $params['margin_bottom'] == 0)) ? no-margin-bottom">
	<div class="row" style="background-color: #{$text->bgColor};">
		<div class="col-lg-12">
			<div class="content">
				{$text->content|noescape}
			</div>
		</div>
		<div n:if="!empty($text->link) && !empty($text->linkText)" class="col-lg-12 text-center">
			<a class="btn btn-bordered btn-transparent btn-white" href="{$text->link}">{$text->linkText}</a>
		</div>
	</div>
</div>
