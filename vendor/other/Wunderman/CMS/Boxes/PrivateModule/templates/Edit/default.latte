{block content}
{control wysiwyg}
<div>
	<div class="page-title">
		<div class="title_left">
			<h3>Edit box</h3>
		</div>

		<div class="title_right">
			<div class="pull-right">
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-8">
			<div class="x_panel">
				<div class="x_content">
					<div class="row">
						<div class="col-lg-12" n:snippet="editFormItem">
							<div class="row">
								{foreach $box->getItems() as $item}
									{if $presenter->getParameter('editItemId') == $item->id}
										{if $iterator->isLast()}</div><div class="row">{else}</div>{/if}
											<div class="col-sm-12">
												{control editItem}
											</div>
										{if $iterator->isLast()}{else}<div class="row">{/if}
									{else}
										<div class="col-sm-4 admin-boxes-items {if !is_null($item->attachment)}with-image{else}only-text{/if}" style="{if $item->color}background-color: #{$item->color}{/if}">
											<div class="admin-boxes-toolbar">
												<a n:if="!$iterator->isFirst()" n:href="moveLeft! moveItemId=>$item->id" class="btn btn-success ajax"><i class="fa fa-chevron-left"></i></a>
												<a n:href="editBoxItem! editItemId=>$item->id" class="btn btn-warning ajax">Edit</a>
												<a n:if="!$iterator->isLast()" n:href="moveRight! moveItemId=>$item->id" class="btn btn-success pull-right ajax"><i class="fa fa-chevron-right"></i></a>
											</div>
											<img n:if="!is_null($item->attachment)" width="100%" alt="{$item->title}" src="{$basePath}/attachments/{$item->attachment->md5}" data-id="{$item->id}" />
											<div class="image-text">
												<span class="name">{$item->title|noescape}</span><br>
												<span class="secondtitle" n:if="$item->secondtitle">{$item->secondtitle|noescape}</span><br n:if="$item->secondtitle">
												{if !is_null($item->attachment)}{$item->category}{/if}
											</div>
										</div>
									{/if}
								{/foreach}
							</div><br><br>
							<div class="row">
								<div class="col-lg-12 bg-info">
									<h2>Add new item</h2>
									{control newItem}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>
		<div class="col-sm-4">
			<div class="x_panel">
				<div class="x_title">
					<h3>Box preferences</h3>
				</div>
				<div class="x_content">
					<div class="row">
						<div class="col-lg-12">
							{form boxPreferencesForm}
								<div class="row">
									<div class="col-lg-6">
										<label>Name</label>
									</div>
									<div class="col-lg-6">
										<input n:name="name" type="text" class="form-control">
									</div>
								</div><br>
								<div class="row">
									<div class="col-lg-6">
										<label>Show filters</label>
									</div>
									<div class="col-lg-6">
										<input n:name="showFilters" type="checkbox" class="js-switch" data-switchery="true">
									</div>
								</div><br>
								<div class="row">
									<div class="col-lg-6">
										<label>Show navigation</label>
									</div>
									<div class="col-lg-6">
										<input n:name="showNavigation" type="checkbox" class="js-switch" data-switchery="true">
									</div>
								</div><br>
								<div class="row">
									<div class="col-lg-12">
										{input save, class=>'btn btn-success'}
									</div>
								</div>
							{/form}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{/block}