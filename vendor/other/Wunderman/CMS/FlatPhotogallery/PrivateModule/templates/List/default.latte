{block content}
<div>
	<div class="page-title">
		<div class="title_left">
			<h3>List of galleries <a n:href=":Private:FlatPhotoGallery:New:" class="btn btn-success btn-sm"><i class="glyphicon glyphicon-plus-sign"></i> Add new gallery</a></h3>
		</div>

		<div class="title_right">
			<div class="pull-right">
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
			<div class="x_panel">
				<div class="x_content">
					<div class="row">
						<div class="col-lg-12">
							<table class="table table-striped table-bordered">
								<tr>
									<th>Gallery name</th>
									<th>Status</th>
									<th>Items count</th>
									<th></th>
									<th></th>
								</tr>
								<tr n:foreach="$galleries as $gallery">
									<td><a n:href=":Private:FlatPhotoGallery:Edit: id=>$gallery->id" class="btn btn-link">{if $gallery->name}{$gallery->name}{else}-- NO NAME --{/if}</a></td>
									<td>{$gallery->status}</td>
									<td>{count($gallery->items)}</td>
									<td width="50"><a n:href=":Private:FlatPhotoGallery:Edit: id=>$gallery->id" class="btn btn-warning">Edit</a></td>
									<td width="50">
										<a data-toggle="modal" data-target="#removeItemModal" data-remove-link="{link removeItem! item=>$gallery->id}" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
									</td>
								</tr>
							</table>
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>
{* delete modal confirmation *}
<div class="modal fade" id="removeItemModal" tabindex="-1" role="dialog" aria-labelledby="removeModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="exampleModalLabel">Delete gallery</h4>
			</div>
			<div class="modal-body">
				Are you sure?
			</div>
			<div class="modal-footer">
				<a class="btn btn-default" data-dismiss="modal">Cancel</a>
				<a href="#" class="btn btn-danger confirm">Delete</a>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	$('#removeItemModal').on('show.bs.modal', function (event) {
		var button = $(event.relatedTarget);
		var deletedItemId = button.data('remove-link');
		var modal = $(this);
		modal.find('a.confirm').attr('href', deletedItemId);
	});
</script>
{**}
{/block}