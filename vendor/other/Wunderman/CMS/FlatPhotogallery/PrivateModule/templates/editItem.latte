<div class="row">
	<div class="col-lg-12"><br>
		<h2>Flat PhotoGallery</h2>
	</div>
</div>

<div class="input-group">
	{input $itemContainer.'-item' class=>'form-control', style=>'width: 100%'}
</div>
<script type="text/javascript">
	$(function(){
		var data = $('#frm-pageForm-item-item').data('values');

		$('#frm-pageForm-item-item').kendoDropDownList({
			dataTextField: "name",
			dataValueField: "id",
			optionLabel: '<div style="width: 300px">Select PhotoGallery...</div>',
			optionLabelTemplate: '<div style="width: 300px">Select any PhotoGallery...</div>',
			dataSource: data,
			valueTemplate: '<div style="width: 300px"><img height="30px" src="/attachments/#=firstPhoto#"> <span>#=name#</span></div>',
			template: '<div style="width: 300px"><img height="30px" src="/attachments/#=firstPhoto#"> <span>#=name#</span></div>'
		});
	});
</script>