{*
 * @var $article
 *}
{block content}
{if $gallery}
	<div id="carousel-flatPhotoGallery-overlay-{$gallery['id']}">
	</div>
	<div class="container carousel-flatPhotoGallery show-basic">
		<div class="row">
			<div class="col-lg-12">
				<div id="carousel-flatPhotoGallery-{$gallery['id']}" class="carousel">
					<!-- Wrapper for slides -->
					<div class="carousel-inner" role="listbox">
						<div n:foreach="$gallery['items'] as $item" n:class="'item', $iterator->isFirst() ? 'active'">
							<img src="/attachments/{$item['attachment']['md5']}" alt="{$item['title']}">
							<div n:if="isset($item['text']) && !empty($item['text'])" class="carousel-caption">
								<i class="glyphicon glyphicon-remove hide-caption"></i>
								<span class="text">{$item['text']}</span>
							</div>
						</div>
					</div>

					<!-- Controls -->
					<div class="carousel-control-overlay left">
						<a class="left carousel-control" href="#carousel-flatPhotoGallery-{$gallery['id']}" role="button" data-slide="prev">
							<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
							<span class="sr-only">Previous</span>
						</a>
					</div>
					<div class="carousel-control-overlay right">
						<a class="right carousel-control" href="#carousel-flatPhotoGallery-{$gallery['id']}" role="button" data-slide="next">
							<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
							<span class="sr-only">Next</span>
						</a>
					</div>
					<div class="detail">Detail</div>
					<div class="close">Close</div>
					<div class="carousel-caption-target"></div>
					<div class="icon-info"></div>
				</div>
			</div>
		</div>
		<div class="row carousel-flatPhotoGallery-indicators" id="carousel-flatPhotoGallery-indicators-{$gallery['id']}">
			<div class="col-lg-12">
				<!-- Indicators -->
				<a class="left carousel-control"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span></a>
				<a class="right carousel-control"><span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></a>
				<ol class="carousel-indicators">
					<li n:foreach="$gallery['items'] as $item" data-target="#carousel-flatPhotoGallery-{$gallery['id']}" data-slide-to="{$iterator->counter-1}"
						n:class="$iterator->isFirst() ? 'current'">
						<span class="carousel-indicator-wrapper">
							<img height="50px" src="/attachments/{$item['attachment']['md5']}" alt="{$item['title']}" />
						</span>
					</li>
				</ol>
			</div>
		</div>
	</div>

	<script type="text/javascript">

	</script>
{/if}
