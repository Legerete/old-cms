<h2>Three columns text</h2><br>
<div class="row">
	<div class="col-lg-2"><strong>Anchor</strong></div>
	<div class="col-lg-4"><input n:name="item-anchor" class="form-control" /></div>
</div><br>
<div class="row">
	<div class="col-lg-2"><strong>Link</strong></div>
	<div class="col-lg-4"><input n:name="item-link" class="form-control" /></div>
</div><br>
<div class="row">
	<div class="col-lg-2"><strong>Link text</strong></div>
	<div class="col-lg-4"><input n:name="item-linkText" class="form-control" /></div>
</div><br>
<div class="row" id="ThreeColumns">
	<div class="col-lg-4">
		<div class="row">
			<div class="col-lg-12">
				<input n:name="item-firstHeader" class="form-control">
			</div>
		</div><br>
		<div class="row">
			<div class="col-lg-12">
				<textarea n:name="item-firstContent" class="form-control wysiwyg"></textarea>
			</div>
		</div>
	</div>
	<div class="col-lg-4">
		<div class="row">
			<div class="col-lg-12">
				<input n:name="item-secondHeader" class="form-control">
			</div>
		</div><br>
		<div class="row">
			<div class="col-lg-12">
				<textarea n:name="item-secondContent" class="form-control wysiwyg"></textarea>
			</div>
		</div>
	</div>
	<div class="col-lg-4">
		<div class="row">
			<div class="col-lg-12">
				<input n:name="item-thirthHeader" class="form-control">
			</div>
		</div><br>
		<div class="row">
			<div class="col-lg-12">
				<textarea n:name="item-thirthContent" class="form-control wysiwyg"></textarea>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		{input item-type}
		{input item-itemId}
	</div>
</div>
<br>