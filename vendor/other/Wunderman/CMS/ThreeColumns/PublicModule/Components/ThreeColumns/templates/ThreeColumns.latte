{*
 * @var $article
 *}
{block content}
<div id="hp-three-boxes" class="container small-text-boxes">
	<div class="row">
		<div class="col-lg-4" style="padding-left: 60px;">
			<h2>{$params['firstHeader']}</h2>
			<p>
				{$params['firstContent']|noescape}
			</p>
		</div>
		<div class="col-lg-4" style="padding-left: 60px;">
			<h2>{$params['secondHeader']}</h2>
			<p>
				{$params['secondContent']|noescape}
			</p>
		</div>
		<div class="col-lg-4" style="padding-left: 60px;">
			<h2>{$params['thirthHeader']}</h2>
			<p>
				{$params['thirthContent']|noescape}
			</p>
		</div>
	</div>
	<div n:if="isset($params['link']) && isset($params['linkText']) && !empty($params['link']) && !empty($params['linkText'])" class="row hidden-xs">
		<div class="col-lg-12">
			<div class="text-center">
				<a href="{$params['link']}" class="btn btn-transparent btn-bordered btn-black btn-center">{$params['linkText']}</a>
			</div>
		</div>
	</div>
</div>
